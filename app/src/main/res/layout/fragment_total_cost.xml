<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment.TotalCostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#512da8"
                app:elevation="0dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:id="@+id/backPress"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_arrow_back_white_24dp" />
                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="260dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bus_image_3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Phương thức Thanh toán"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                        </RelativeLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-220dp"
                            android:focusableInTouchMode="false"
                            android:layout_marginHorizontal="10dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="16dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                               <RadioGroup
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
                                   <RadioButton
                                       android:id="@+id/radioCredit"
                                       android:layout_width="match_parent"
                                       android:layout_height="55dp"
                                       android:paddingStart="20dp"
                                       android:drawableLeft="@drawable/credit_card_radio"
                                       android:text="     Credit Card"
                                       android:textSize="25dp"
                                       android:textColor="@color/DimGray"/>

                                   <RadioButton
                                       android:id="@+id/radioVisa"
                                       android:layout_width="match_parent"
                                       android:layout_height="55dp"
                                       android:paddingStart="20dp"
                                       android:drawableLeft="@drawable/visa_radio"
                                       android:text="     Visa"
                                       android:textSize="25dp"
                                       android:textColor="@color/DimGray"/>

                                   <RadioButton
                                       android:id="@+id/radioCash"
                                       android:layout_width="match_parent"
                                       android:layout_height="55dp"
                                       android:paddingStart="20dp"
                                       android:drawableLeft="@drawable/cash_radio"
                                       android:text="     Tiền mặt"
                                       android:textSize="25dp"
                                       android:textColor="@color/DimGray"/>
                               </RadioGroup>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-45dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="260dp"
                                android:scaleType="centerCrop" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Tổng tiền"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                        </RelativeLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardView"
                            app:strokeColor="@color/Bisque"
                            app:strokeWidth="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-220dp"
                            android:focusableInTouchMode="false"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="16dp"
                            app:cardUseCompatPadding="true"
                            android:layout_marginBottom="80dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/Bisque">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="8dp"
                                            android:gravity="fill"
                                            android:hint="Thông tin giá vé"
                                            android:inputType="date"
                                            android:maxLines="1"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />
                                    </LinearLayout>
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/Lavender">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:fontFamily="@font/roboto"
                                            android:gravity="fill"
                                            android:text="Giảm giá"
                                            android:textColor="@color/black"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvCoupon"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/holo_red_dark"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>

                                </com.google.android.material.textfield.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:gravity="fill"
                                        android:text="Nhập mã:"
                                        android:textColor="@color/DimGray"
                                        android:textSize="20dp" />

                                    <EditText
                                        android:id="@+id/editCode"
                                        android:layout_width="180dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="10dp"
                                        android:gravity="fill"
                                        android:maxLines="1"
                                        android:textColor="@android:color/black"
                                        android:textSize="20dp" />

                                    <Button
                                        android:id="@+id/btnInputCode"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/buttonshape"
                                        android:fontFamily="@font/rubik_medium"
                                        android:gravity="center"
                                        android:paddingTop="-5dp"
                                        android:text="OK"
                                        android:textColor="#ffffff"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/Lavender">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Chuyến đi"
                                            android:textColor="@color/black"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/totalTicketPrice"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/holo_red_dark"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Giá vé"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvTicketPrice"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        >

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Thuế, phí"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvTax"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/Lavender">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Dịch vụ"
                                            android:textColor="@color/black"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvServiceFee"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:fontFamily="sans-serif"
                                            android:gravity="fill"
                                            android:textColor="@android:color/holo_red_dark"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Hành lý"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvPacked"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Bảo hiểm"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvInsurance"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="5dp"
                                    android:textColorHint="#FF8A99AF">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        >

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="Bữa ăn"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp" />

                                        <TextView
                                            android:id="@+id/tvMeal"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />

                                    </LinearLayout>


                                </com.google.android.material.textfield.TextInputLayout>



                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@color/Bisque">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:layout_width="110dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="8dp"
                                            android:gravity="fill"
                                            android:hint="Tổng: "
                                            android:inputType="date"
                                            android:maxLines="1"
                                            android:textColor="@android:color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold" />
                                        <TextView
                                            android:id="@+id/tvAll"
                                            android:layout_width="180dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:textColor="@android:color/holo_red_dark"
                                            android:textSize="20dp"
                                            android:textStyle="bold"
                                            tools:ignore="TextViewEdits" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="10dp"
                                            android:gravity="fill"
                                            android:text="VND"
                                            android:textColor="@color/DimGray"
                                            android:textSize="20dp"
                                            tools:ignore="TextViewEdits" />
                                    </LinearLayout>
                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>

                </ScrollView>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/table_border_totalmoney">

        <Button
            android:id="@+id/btnPay"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="Thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="8dp"
            android:text="Tổng tiền"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/btnPay"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRedAll"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="000"
            android:layout_marginTop="-5dp"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textColor="#E50914"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/btnPay"
            app:layout_constraintTop_toBottomOf="@+id/tvTemp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>